    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/xColor" /> <!-- Shadow Color -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Actual Button -->
    <item android:top="4dp" android:left="4dp"> <!-- Adjust for shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="@color/xColor"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
